<div id="notes">
	<h2>Add a comment</h2>
	<form class="create-form">
		<div class="form-group">
			<input type="text" name="title">
			<input type="text" name="body">
		</div>

		<button type="submit">Add comment</button>
	</form>

{{#if note}}
	<h2>{{this.title}}</h2>
	<input id="titleinput" name="title">
	
</div>

